#include <iostream>
#include <conio.h>
#include <iomanip>
#include <cmath>

using namespace std;

int main()
{
	int x, y;
	float v, z;
	z=2.5;
	
	cout << "Your value of X: ";
	cin >> x;
	cout << "Your value of Y: ";
	cin >> y;
	
	switch (x)
	{
		case 1:
			if (y>1 && y<5)
			{
				cout << setw(10) << setprecision(2) << fixed;
				cout << "V = " << x*y*z;
			}
			else if (y>=5)
			{
				(cout << setw(10) << setprecision(2) << fixed);
				cout << "V = " << x+(y/z);
			}
			else
			{
				cout << setw(10) << setprecision(2) << fixed;
				cout << "V = " << x+y+z;
			}
			break;
		
		case 2:
			if (y<=5)
			{
				cout << setw(10) << setprecision(2) << fixed;	
				cout << "V = " << abs((x-y)/z);
			}
			else if (y>5)
			{
				cout << setw(10) << setprecision(2) << fixed;
				cout << "V = " << x-sqrt(y+z);
			}
			else
			{
				cout << setw(10) << setprecision(2) << fixed;
				cout << "V = " << x+y+z;
			}
			break;
					
		default:
			{
				cout << setw(10) << setprecision(2) << fixed;
				cout << "V = " << x+y+z;
			}
	}
	
	_getch();
	return 0;
	
}
